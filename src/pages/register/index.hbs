        <input type="password" placeholder="Пароль(ещё раз)" />
        <a class='button-solid' onclick="alert('ОП, НЕ ВСЁ ТАК СРАЗУ!')">Зарегистрироваться</a>
        <a href='/pages/login'>Войти</a>
    </form>
    {{/content}}
